<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    tools:context="com.mark.bluetoothdemo.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    <Switch
        android:id="@+id/swLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickLightSwitch"
        android:text="@string/light_switch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:onClick="onClickSTT"
        android:text="@string/button_STT"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_vertical_middle"
        app:layout_constraintTop_toBottomOf="@+id/swLight" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:onClick="onClickConnect"
        android:text="@string/button_connect"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_vertical_left"
        app:layout_constraintTop_toBottomOf="@+id/swLight" />

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:enabled="false"
        android:onClick="onClickDisconnect"
        android:text="@string/button_disconnect"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_vertical_left"
        app:layout_constraintRight_toLeftOf="@+id/guideline_vertical_middle"
        app:layout_constraintTop_toBottomOf="@+id/swLight" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:onClick="onClickClear"
        android:text="@string/button_clear"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_vertical_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swLight" />

    <!--Written Field-->
    <TextView
        android:id="@+id/tvTitleInputField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorMainTextViewBackground"
        android:text="@string/written_field"
        android:textColor="@color/colorMainTextViewTitle"
        app:layout_constraintBottom_toTopOf="@+id/scrollView_input"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnect"
        app:layout_constraintRight_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect" />

    <ScrollView
        android:id="@+id/scrollView_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_top"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnect"
        app:layout_constraintRight_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleInputField">

        <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </ScrollView>

    <!--Read Field-->
    <TextView
        android:id="@+id/tvTitleSensorField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorMainTextViewBackground"
        android:text="@string/read_field"
        android:textColor="@color/colorMainTextViewTitle"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnect"
        app:layout_constraintRight_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_top" />

    <ScrollView
        android:id="@+id/scrollView_sensor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_bottom"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnect"
        app:layout_constraintRight_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSensorField">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLightSensor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvGravitySensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <!--Log Field-->
    <TextView
        android:id="@+id/tvTitleLogField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorMainTextViewBackground"
        android:text="@string/log_field"
        android:textColor="@color/colorMainTextViewTitle"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnect"
        app:layout_constraintRight_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_bottom" />

    <ScrollView
        android:id="@+id/scrollView_output"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnect"
        app:layout_constraintRight_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleLogField">

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Vertical Guideline-->
    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="0dp" />

    <!--Horizontal Guideline-->
    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="189dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

</android.support.constraint.ConstraintLayout>